				<form type="headword">
					<orth n="">absolutizare</orth>
					<stress xml:lang="ro-x-accent-upcase-vowels">ABSOLUTIZÁRE</stress>
					<syll/>
					<pron/>
				</form>
				<gramGrp>
					<pos value="s."/>
					<gen value="f."/>
