				<form type="headword">
					<orth n="">abnegație</orth>
					<stress xml:lang="ro-x-accent-upcase-vowels">ABNEGÁŢIE</stress>
					<syll/>
					<pron/>
				</form>
				<gramGrp>
					<pos value="s."/>
					<gen value="f."/>
					<number value=""/>
					<case value=""/>
