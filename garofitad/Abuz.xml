						<sense xml:id="uuid-18ddcd64-7fc1-4cdf-ae7d-5e2e4d243c90" n="✦">
							<re type="unitate-semantică-subsumată" subtype="syntagma">
								
								<term>abuz de poziție dominantă</term>
							</re>
							<def xml:id="id"/>
							<usg corresp="#id">
								<hi rend="italic">
									<seg type="dom" rend="usg">JUR.</seg>
